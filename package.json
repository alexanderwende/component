{
  "name": "component",
  "version": "0.1.0",
  "description": "A component implementation using lit-html.",
  "keywords": [
    "web-component",
    "custom-element",
    "component",
    "component-library",
    "shadow-dom",
    "lit-html",
    "decorators",
    "typescript"
  ],
  "author": "Alexander Wende",
  "license": "BSD-3-Clause",
  "repository": "github:alexanderwende/component.git",
  "homepage": "https://github.com/alexanderwende/component#readme",
  "bugs": "https://github.com/alexanderwende/component/issues",
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "/dist/",
    "/src/"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json && npm run checksize",
    "checksize": "rollup -c && rimraf dist/index.bundle.js",
    "pretest": "rimraf ./dev ./coverage",
    "test": "tsc -p tsconfig.dev.json && karma start karma.config.js",
    "test:watch": "tsc -w -p tsconfig.dev.json & karma start karma.config.js --auto-watch --no-single-run",
    "demo": "rollup -c rollup.demo.config.js -w",
    "predocs": "rimraf ./docs",
    "docs": "api-extractor run && api-documenter markdown --input-folder ./docs --output-folder ./docs",
    "prerelease": "npm run test && npm run build",
    "release": "git add ./dist ./docs && standard-version -a",
    "release:dry": "standard-version --dry-run"
  },
  "devDependencies": {
    "@types/jasmine": "^3.3.12",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-remap-coverage": "^0.1.5",
    "karma-rollup-preprocessor": "^7.0.0",
    "lit-html": "^1.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.7.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.19.3",
    "standard-version": "^5.0.2",
    "tslint": "^5.14.0",
    "tslint-clean-code": "^0.2.9",
    "typescript": "^3.3.4000"
  },
  "peerDependencies": {
    "lit-html": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
