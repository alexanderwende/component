{
  "name": "custom-element",
  "version": "0.1.0",
  "description": "A custom element implementation using lit-html.",
  "types": "lib/index.d.ts",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "files": [
    "/lib/",
    "/src/"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "rollup -c",
    "pretest": "rimraf dev coverage",
    "test": "tsc -p tsconfig.dev.json && karma start karma.config.js",
    "test:watch": "tsc -w -p tsconfig.dev.json & karma start karma.config.js --auto-watch --no-single-run",
    "prerelease": "npm run test && npm run build && git add lib && git diff-index --quiet HEAD || git commit -m \"chore(build): updating build files\"",
    "release": "release-it --no-npm.publish",
    "changelog": "auto-changelog -p --stdout",
    "beforeStage": "auto-changelog -p",
    "demo": "rollup -c rollup.demo.config.js -w"
  },
  "author": "Alexander Wende",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/jasmine": "^3.3.8",
    "auto-changelog": "^1.11.0",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-remap-coverage": "^0.1.5",
    "karma-rollup-preprocessor": "^7.0.0",
    "release-it": "^10.1.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.19.2",
    "tslint": "^5.12.1",
    "tslint-clean-code": "^0.2.9",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "lit-html": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
