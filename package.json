{
  "name": "component",
  "version": "0.1.0",
  "description": "A component implementation using lit-html.",
  "keywords": [
    "web-component",
    "custom-element",
    "component",
    "component-library",
    "shadow-dom",
    "lit-html",
    "decorators",
    "typescript"
  ],
  "author": "Alexander Wende",
  "license": "BSD-3-Clause",
  "repository": "github:alexanderwende/component.git",
  "homepage": "https://github.com/alexanderwende/component#readme",
  "bugs": "https://github.com/alexanderwende/component/issues",
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "/dist/",
    "/src/"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json && npm run checksize",
    "checksize": "rollup -c && rimraf dist/index.bundle.js",
    "pretest": "rimraf ./dev ./coverage",
    "test": "tsc -p tsconfig.dev.json && karma start karma.config.js",
    "test:watch": "tsc -w -p tsconfig.dev.json & karma start karma.config.js --auto-watch --no-single-run",
    "test:debug": "karma start karma.config.typescript.js --browsers ChromeDebug  --auto-watch --no-single-run",
    "test:single": "karma start karma.config.typescript.js",
    "demo": "rollup -c rollup.demo.config.js -w",
    "prerelease": "npm run test && npm run build",
    "release": "git add ./dist ./docs && standard-version -a",
    "release:dry": "standard-version --dry-run"
  },
  "devDependencies": {
    "@types/jasmine": "^3.3.16",
    "jasmine-core": "^3.4.0",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-remap-coverage": "^0.1.5",
    "karma-rollup-preprocessor": "^7.0.2",
    "karma-typescript": "^4.1.1",
    "karma-typescript-es6-transform": "^4.1.1",
    "lit-html": "^1.1.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.18.0",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-filesize": "^6.1.1",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "standard-version": "^7.0.0",
    "tslint": "^5.18.0",
    "tslint-clean-code": "^0.2.9",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "lit-html": "^1.1.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
